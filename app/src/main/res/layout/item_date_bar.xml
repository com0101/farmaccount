<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_date"
                android:text="@string/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_arrow_left"
                app:layout_constraintEnd_toStartOf="@+id/image_arrow_right"/>

        <ImageView
                android:id="@+id/image_arrow_right"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginEnd="30dp"
                app:srcCompat="@android:drawable/ic_media_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_date"
                app:layout_constraintBottom_toBottomOf="@+id/text_date"/>

        <ImageView
                android:id="@+id/image_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="@dimen/arrow_rotate_180"
                android:layout_marginStart="30dp"
                app:srcCompat="@android:drawable/ic_media_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_date"
                app:layout_constraintBottom_toBottomOf="@+id/text_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>