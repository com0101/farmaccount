<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="budget" type="com.snc.farmaccount.object.Budget"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translate_100">

        <ImageView
                android:id="@+id/budget_farm_image"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/waiting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintBottom_toTopOf="@+id/type"/>

        <ImageView
                android:id="@+id/type"
                android:layout_width="172dp"
                android:layout_height="40dp"
                android:layout_marginBottom="200dp"
                app:layout_constraintEnd_toEndOf="@+id/budget_farm_image"
                app:layout_constraintStart_toStartOf="@+id/budget_farm_image"
                app:srcCompat="@drawable/waittext"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>