<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.snc.farmaccount.home.DayViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:context=".home.DayCalendarFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_farm"
                android:id="@+id/date">

            <TextView
                    android:id="@+id/text_date"
                    android:text="@string/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_right"
                    app:layout_constraintStart_toEndOf="@+id/image_arrow_left"
                    app:layout_constraintTop_toTopOf="@+id/image_arrow_left"
                    app:layout_constraintBottom_toBottomOf="@+id/image_arrow_left"/>

            <ImageView
                    android:id="@+id/image_arrow_right"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

            <ImageView
                    android:id="@+id/image_arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="@dimen/arrow_rotate_180"
                    android:layout_marginStart="30dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/event_list"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                tools:listitem="@layout/item_add_event"
                tools:itemCount="3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/date" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp">
        </androidx.recyclerview.widget.RecyclerView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>