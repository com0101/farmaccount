<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.snc.farmaccount.budget.BudgetViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".budget.BudgetFragment">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_back_state"
                android:rotation="@dimen/arrow_rotate_180"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@android:drawable/ic_media_play"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text__budget_edit"
                android:text="@string/budget_page_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintStart_toEndOf="@+id/image_back_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_back_state"
                app:layout_constraintBottom_toBottomOf="@+id/image_back_state"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/radius_border"
                android:id="@+id/price"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/text_expend_title"
                app:layout_constraintStart_toStartOf="@+id/text_expend_title"
                app:layout_constraintEnd_toEndOf="@+id/text__budget_edit">

            <EditText
                    android:id="@+id/text_budget"
                    android:text="20000"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/gray_green"
                    android:background="@null"
                    android:gravity="center|end"
                    app:layout_constraintStart_toEndOf="@+id/image_coin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image_coin"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/money_icon"
                    app:civ_border_width="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/text_expend_title"
                android:text="@string/budget_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="305dp"
                app:layout_constraintTop_toBottomOf="@+id/text__budget_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_back_state"
                app:layout_constraintHorizontal_bias="0.0"/>

        <ImageView
                android:id="@+id/image_cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/save"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintEnd_toEndOf="@+id/price"/>

        <TextView
                android:id="@+id/text_farm_title"
                android:text="@string/farm_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/image_cancel"
                app:layout_constraintEnd_toEndOf="@+id/text_expend_title"
                app:layout_constraintStart_toStartOf="@+id/text_expend_title"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:context=".choose.ChooseFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/farm_type"
                app:layout_constraintTop_toBottomOf="@+id/text_farm_title"
                android:layout_marginTop="9dp">


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/farm_list">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:id="@+id/image_arrow_right"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:id="@+id/image_arrow_left"
                    android:rotation="@dimen/arrow_rotate_180"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/image_delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/edit"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/farm_type"
                app:layout_constraintEnd_toEndOf="@+id/image_cancel"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>