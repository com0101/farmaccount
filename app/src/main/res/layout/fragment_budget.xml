<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.snc.farmaccount.budget.BudgetViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".budget.BudgetFragment" android:background="@color/egg_yellow">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/toolbar"
                android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="26dp"
                android:layout_height="29dp"
                android:id="@+id/image_back_state"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/back"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text__budget_edit"
                android:text="@string/budget_page_title"
                android:fontFamily="@font/gen_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintStart_toEndOf="@+id/image_back_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_back_state"
                app:layout_constraintBottom_toBottomOf="@+id/image_back_state" android:textColor="@color/white"
                android:textStyle="bold"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/event_background"
                android:id="@+id/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/money_border"
                android:id="@+id/price"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/farm_type"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp">

            <EditText
                    android:id="@+id/text_budget"
                    android:text="@={viewModel.budgetPrice}"
                    android:fontFamily="@font/gen_normal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/money_text"
                    android:background="@null"
                    android:gravity="center|end"
                    app:layout_constraintStart_toEndOf="@+id/image_coin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0"/>

            <ImageView
                    android:id="@+id/image_coin"
                    android:layout_width="32dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/money_icon"
                    app:civ_border_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/text_expend_title"
                android:fontFamily="@font/gen_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="305dp"
                app:layout_constraintTop_toBottomOf="@+id/text__budget_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_back_state"
                app:layout_constraintHorizontal_bias="0.0" android:visibility="gone"/>

        <ImageView
                android:id="@+id/image_send"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/save"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintEnd_toEndOf="@+id/price"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:context=".choose.ChooseFragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/farm_type"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/text__budget_edit">


            <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/farm_list" android:visibility="gone">
            </androidx.viewpager2.widget.ViewPager2>

            <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/unSelect_farm_list">
            </androidx.viewpager2.widget.ViewPager2>

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="29dp"
                    android:id="@+id/image_arrow_right"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/arrow"
                    app:layout_constraintTop_toTopOf="parent" android:rotation="@dimen/arrow_rotate_180"/>

            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="29dp"
                    android:id="@+id/image_arrow_left"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/image_edit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/edit"
                android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/farm_type"
                app:layout_constraintStart_toStartOf="@+id/price" android:layout_marginStart="2dp"/>
        <TextView
                android:text="@string/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_title" app:layout_constraintStart_toStartOf="@+id/image_edit"
                app:layout_constraintEnd_toEndOf="@+id/image_edit"
                app:layout_constraintTop_toTopOf="@+id/image_edit"
                app:layout_constraintBottom_toBottomOf="@+id/image_edit" android:layout_marginStart="32dp"
                android:textSize="18sp" android:textColor="@color/white" android:fontFamily="@font/gen_normal"/>
        <TextView
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_title"
                app:layout_constraintTop_toTopOf="@+id/image_send"
                app:layout_constraintBottom_toBottomOf="@+id/image_send"
                app:layout_constraintEnd_toEndOf="@+id/image_send"
                app:layout_constraintStart_toStartOf="@+id/image_send" android:layout_marginStart="32dp"
                android:textColor="@color/white" android:textSize="18sp"
                android:fontFamily="@font/gen_normal"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>