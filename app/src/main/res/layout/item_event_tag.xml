<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="tag" type="com.snc.farmaccount.object.Tag"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/event_tag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/tag_lunch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/text_event"
                android:text="@string/tag_breakfast"
                android:fontFamily="@font/gen_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/event_tag"
                app:layout_constraintEnd_toEndOf="@+id/event_tag"
                app:layout_constraintStart_toStartOf="@+id/event_tag"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp" android:textColor="@color/expend_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>