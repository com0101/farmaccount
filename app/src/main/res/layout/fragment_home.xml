<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".home.HomeFragment">

        <ImageView
                android:id="@+id/image_farm"
                android:layout_width="0dp"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:id="@+id/button_date_picker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/radius_border"
                app:layout_constraintStart_toEndOf="@+id/button_date_picker"
                app:layout_constraintTop_toTopOf="@+id/button_date_picker"
                app:layout_constraintBottom_toBottomOf="@+id/button_date_picker"
                app:layout_constraintEnd_toStartOf="@+id/button_date_today"
                android:id="@+id/constraintLayout">

            <TextView
                    android:id="@+id/text_budget"
                    android:text="@string/budget_number"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:paddingStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/gray_green"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/image_coin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image_coin"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_launcher_background"
                    app:civ_border_width="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
                android:id="@+id/button_date_today"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_setting"/>

        <Button
                android:id="@+id/button_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_farm"
                android:id="@+id/date">

            <TextView
                    android:id="@+id/text_date"
                    android:text="@string/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_right"
                    app:layout_constraintStart_toEndOf="@+id/image_arrow_left"/>

            <ImageView
                    android:id="@+id/image_arrow_right"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_date"
                    app:layout_constraintBottom_toBottomOf="@+id/text_date"/>

            <ImageView
                    android:id="@+id/image_arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="@dimen/arrow_rotate_180"
                    android:layout_marginStart="30dp"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_date"
                    app:layout_constraintBottom_toBottomOf="@+id/text_date"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/recyclerView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/image_add_event" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp">
            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" app:srcCompat="@android:drawable/ic_input_add"
                    android:id="@+id/image_add_event"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="184dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="185dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>